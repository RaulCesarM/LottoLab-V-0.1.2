    <script>
        var originalData = myChart.data.datasets[0].data.slice();

        function ordenar() {

            var data = myChart.data.datasets[0].data;


            data.sort(function (a, b) {
                return a - b;
            });


            myChart.update();
        }

        function mostrarOriginal() {
            // Atualize o array de dados do gráfico com a cópia original
